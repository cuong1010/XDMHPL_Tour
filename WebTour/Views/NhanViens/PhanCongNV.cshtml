@model BusAndModel.Model.NhanVienTheoDoan

@{
    ViewBag.Title = "Phân Công Nhân Viên";
}

<h2>Phân Công Nhân Viên</h2>

@using (Html.BeginForm("PhanCong", "NhanViens", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    <div class="box-header with-border">
        <h3 class="box-title">Phân Công Nhân Viên Theo Đoàn</h3><div class="box-tools pull-right">
            <button type="submit" class="btn btn-box-tool">
                <i class="fa fa-check" style="font-size:16px"></i>
            </button>
            <span class="btn btn-box-tool" onclick="location.href='/NhanViens/Index'">
                <i class="fa fa-times" style="font-size:16px"></i>
            </span>
        </div>
    </div>
    <div class="box-body">
        <div class="row">
            <div class="col-md-12"><b class="text-danger">@ViewBag.error</b></div>
            @Html.AntiForgeryToken()
            <!-------------------------------------COL12------------------------------------>
            <div class="col-md-12">
                <div class="form-group minHeight80">
                    <label>Nhiệm Vụ </label>
                    @Html.DropDownList("idNhiemVu", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.idNhiemVu, "", new { @class = "text-danger" })
                </div>
                <div class="form-group minHeight80">
                    <label>Nhân Viên</label>
                    @Html.DropDownList("idNhanVien", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.idNhanVien, "", new { @class = "text-danger" })
                </div>
                <div class="form-group minHeight80">
                    <label>Đoàn Đăng Ký</label>
                    @Html.DropDownList("idDoanKhach", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.idDoanKhach, "", new { @class = "text-danger" })
                </div>

            </div>
        </div>
    </div>
}