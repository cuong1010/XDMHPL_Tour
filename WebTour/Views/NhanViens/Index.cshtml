@model IEnumerable<BusAndModel.Model.NhanVien>

@{
    ViewBag.Title = "Danh Sách Nhân Viên";
}

<div class="box">
    <div class="box-header text-center">
        <h3>Danh sách nhân viên</h3>
        <div class="box-tools pull-right">
            <span class="btn btn-box-tool" onclick="location.href='/Nhanviens/Create'">
                <i class="fa fa-plus" style="font-size:16px"></i>
            </span>
        </div>
    </div>
    <div class="box-body">
        <table id="example2" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Tên Nhân Viên</th>
                    <th>Sửa Thông tin</th>
                    <th>Thông Tin Chi Tiết</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.TenNhanVien</td>
                        <td class="text-center">
                            <button type="submit" class="btn btn-box-tool" onclick="location.href='/Nhanviens/Edit/'+@item.Id">
                                <i class="fa fa-edit" style="font-size:15px"></i>
                            </button>
                        </td>
                        <td>
                            <button type="submit" class="btn btn-box-tool" onclick="location.href='/Nhanviens/Details/'+@item.Id">
                                Chi Tiết
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>Id</th>
                    <th>Tên Nhân Viên</th>
                    <th>Sửa Thông tin</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>