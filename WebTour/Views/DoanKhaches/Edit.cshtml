@using BusAndModel.Model
@model DoanKhach

@{
    ViewBag.Title = "Cập Nhật Thông Tin";
}


<h2>Cập Nhật Tiền Đoàn</h2>


@using (Html.BeginForm("Edit", "DoanKhaches", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    <div class="box-header with-border">
        <h3 class="box-title">Thêm thông tin hành khách</h3>
        <div class="box-tools pull-right">
            <button type="submit" class="btn btn-box-tool">
                <i class="fa fa-check" style="font-size:16px"></i>
            </button>
            <span class="btn btn-box-tool" onclick="location.href='/KhachHangs/Index'">
                <i class="fa fa-times" style="font-size:16px"></i>
            </span>
        </div>
    </div>
    <div class="box-body">
        <div class="row">
            <div><b class="text-danger">@ViewBag.error</b></div>
            @Html.AntiForgeryToken()
            <!-------------------------------------COL12------------------------------------>
            <div class="col-md-12">
                <div class="form-group minHeight80">
                    <label>Tổng Tiền Khách Sạn</label>
                    @Html.EditorFor(model => model.TongKS, new { htmlAttributes = new { @class = "form-control", @type = "number", @placeholder = "Nhập số tiền..." } })
                    @Html.ValidationMessageFor(model => model.TongKS, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label>Tổng Tiền Ăn</label>
                    @Html.EditorFor(model => model.TongAn, new { htmlAttributes = new { @class = "form-control", @type = "number", @placeholder = "Nhập số tiền..." } })
                    @Html.ValidationMessageFor(model => model.TongAn, "", new { @class = "text-danger" })
                    
                </div>

                <div class="form-group">
                    <label>Tổng Tiền Phương Tiện</label>
                    @Html.EditorFor(model => model.TongPT, new { htmlAttributes = new { @class = "form-control", @type = "number", @placeholder = "Nhập số tiền..." } })
                    @Html.ValidationMessageFor(model => model.TongPT, "", new { @class = "text-danger" })
                </div>

                <div class="form-group minHeight80">
                    <label>Tiền Khác</label>
                    @Html.EditorFor(model => model.TongKhac, new { htmlAttributes = new { @class = "form-control", @type = "number", @placeholder = "Nhập số tiền..." } })
                    @Html.ValidationMessageFor(model => model.TongKhac, "", new { @class = "text-danger" })
                </div>
                <div class="form-group minHeight80">
                    <button type="submit" class="btn btn-box-tool">Cập Nhật</button>
</div>


            </div>
        </div>
    </div>
}