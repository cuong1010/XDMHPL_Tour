@model BusAndModel.Model.DSKhachTheoDoan

@{
    ViewBag.Title = "Đăng ký Khách Cho Đoàn";
}

<h2>Đăng Ký Khách Cho Đoàn</h2>

@using (Html.BeginForm("DangKy", "DoanKhaches", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    <div class="box-header with-border">
        <h3 class="box-title">Đăng ký Khách theo Đoàn</h3><div class="box-tools pull-right">
            <button type="submit" class="btn btn-box-tool">
                <i class="fa fa-check" style="font-size:16px"></i>
            </button>
            <span class="btn btn-box-tool" onclick="location.href='/DoanKhaches/Index'">
                <i class="fa fa-times" style="font-size:16px"></i>
            </span>
        </div>
    </div>
    <div class="box-body">
        <div class="row">
            <div><b class="text-danger">@ViewBag.error</b></div>
            @Html.AntiForgeryToken()
            <!-------------------------------------COL12------------------------------------>
            <div class="col-md-12">
                <div class="form-group minHeight80">
                    <label>Khách Hàng </label>
                    @Html.DropDownList("KhachHangId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.KhachHangId, "", new { @class = "text-danger" })
                </div>
                <div class="form-group minHeight80">
                    <label>Tour Đăng Ký</label>
                    <input class="form-control" value="@ViewBag.tenTour" readonly="readonly"/>
                </div>
                <div class="form-group minHeight80">
                    <label>Đoàn Đăng Ký</label>
                    @Html.DropDownList("DoanKhachId", null, htmlAttributes: new { @class = "form-control", @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.DoanKhachId, "", new { @class = "text-danger" })
                </div>
                <div class="form-group minHeight80">
                    <label>Thời Gian Khởi Hành</label>
                    <input class="form-control" value="@ViewBag.ngayKhoiHanh" readonly="readonly" />
                </div>
                <div class="form-group minHeight80">
                    <label>Thời Gian Kết Thúc</label>
                    <input class="form-control" value="@ViewBag.ngayKetThuc" readonly="readonly" />
                </div>
            </div>
        </div>
    </div>
}