@model IEnumerable<WebTour.Models.DoanKhachViewModel>

@{
    ViewBag.Title = "Danh sách đoàn khách";
}

<div class="box">
    <div class="box-header text-center">
        <h3>Danh sách đoàn khách</h3>
        <div class="box-tools pull-right">
            <span class="btn btn-box-tool" onclick="location.href='/DoanKhaches/Create'">
                <i class="fa fa-plus" style="font-size:16px">Thêm Đoàn</i>
            </span>
        </div>
    </div>
    <div class="box-body">
        <table id="example2" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Mã Đoàn</th>
                    <th>Tên Tour</th>
                    <th>Tên Đoàn</th>
                    <th>Thông tin Tour</th>
                    <th>Ngày khởi hành</th>
                    <th>Ngày Kết Thúc</th>
                    <th>Số lượng còn lại</th>
                    <th>Đăng ký khách</th>
                    <th>Cập nhật tiền đoàn</th>
                    <th>Hủy Đoàn</th>
                    <th>Chi Tiết</th>

                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.maDoan</td>
                        <td>@item.tenTour</td>
                        <td>@item.tenDoan</td>
                        <td>@item.thongtin</td>
                        <td>@item.ngayKhoiHanh.ToShortDateString()</td>
                        <td>@item.ngayKetThuc.ToShortDateString()</td>
                        <td>@item.soluong</td>
                        @if (@item.ngayKetThuc.Date > DateTime.Now.Date)
                        {
                            <td class="text-center">
                                <button type="submit" class="btn btn-box-tool" onclick="location.href='/DoanKhaches/Dangky/'+@item.maDoan">
                                    <i class="fa fa-plus" style="font-size:15px"></i>
                                </button>

                            </td>}
                        else
                        {
                            <td></td>
                        }
                        @if (@item.ngayKetThuc.Date < DateTime.Now.Date && !@item.isEdit)
                        {
                            <td class="text-center">
                                <button type="submit" class="btn btn-box-tool" onclick="location.href='/DoanKhaches/Edit/'+@item.maDoan">
                                    <i class="fa fa-edit" style="font-size:15px"></i>
                                </button>

                            </td>
                        }
                        else
                        {
                            <td></td>
                        }
                        @if (@item.ngayKetThuc.Date > DateTime.Now.Date)
                        {
                        <td class="text-center">
                            <button type="submit" class="btn btn-box-tool" onclick="location.href='/DoanKhaches/Delete/'+@item.maDoan">
                                <i class="fa fa-times" style="font-size:15px"></i>
                            </button>

                        </td>}
                        else
                        {
                        <td></td>}
                        <td class="text-center">
                            <button type="submit" class="btn btn-box-tool" onclick="location.href='/DoanKhaches/Details/'+@item.maDoan">
                                Chi Tiết
                            </button>

                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>Mã Đoàn</th>
                    <th>Tên Tour</th>
                    <th>Tên Đoàn</th>
                    <th>Thông tin Tour</th>
                    <th>Số lượng còn lại</th>
                    <th>Đăng ký khách</th>

                </tr>
            </tfoot>
        </table>
    </div>
</div>