@model WebTour.Models.ThongKeDoanKhachViewModel

@{
    ViewBag.Title = "Thống Kê Đoàn Khách";
}

<div class="box">
    <div class="box-header text-center">
        <h3>Thống Kê</h3>
    </div>
    @using (Html.BeginForm("DoanKhach", "ThongKe", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        <div class="box-body">
            <div class="col-sm-6">
                <label>
                    Từ Ngày
                </label>
                <div class="input-group date" id='datetimepicker1'>
                    <div class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </div>
                    @Html.EditorFor(model => model.from, new { htmlAttributes = new { @class = "form-control text-box single-line" } })


                </div>
            </div>
            <div class="col-sm-6">
                <label>Đến Ngày</label>
                <div class="input-group date" id='datetimepicker2'>
                    <div class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </div>
                    @Html.EditorFor(model => model.to, new { htmlAttributes = new { @class = "form-control text-box single-line" } })


                </div>
            </div>
               <hr />
            <div class="col-sm-12 text-center">
                <button type="submit" class="btn-info btn">
                    Thống Kê
                </button>
            </div>
        </div>}
    <div class="box-header text-center">
        <h4>Thông tin Thống Kê</h4>
    </div>
    <div class="box-body">
        <div class="col-sm-12">
            <h4 class="text-info">Tổng Tiền : @string.Format("{0:C}", Model.TongTien)</h4>
        </div>
        <table id="example2" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Mã Đoàn</th>
                    <th>Tên Đoàn</th>
                    <th>Ngày Bắt Đầu</th>
                    <th>Ngày Kết Thúc</th>
                    <th>Tổng Tiền Ăn</th>
                    <th>Tổng Tiền Khách Sạn</th>
                    <th>Tổng Tiền Phương Tiện</th>
                    <th>Tổng Tiền Khác</th>
                    <th>Tổng Cộng</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.danhSachDoan !=null)
                {
                foreach (var item in Model.danhSachDoan)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.TenGoi</td>
                        <td>@item.NgayKhoiHanh.ToShortDateString()</td>
                        <td>@item.NgayKetThuc.ToShortDateString()</td>
                        <td>@string.Format("{0:C}", @item.TongAn)</td>
                        <td>@string.Format("{0:C}", @item.TongKS)</td>
                        <td>@string.Format("{0:C}", @item.TongPT)</td>
                        <td>@string.Format("{0:C}", @item.TongKhac)</td>
                        @{

                            var tong = item.TongAn.Value + item.TongKhac.Value + item.TongKS.Value + item.TongPT.Value;
                        }
                        <td>@string.Format("{0:C}", @tong)</td>
                    </tr>
                            }}
            </tbody>
            <tfoot>
                <tr>
                    <th>Mã Đoàn</th>
                    <th>Tên Đoàn</th>
                    <th>Ngày Bắt Đầu</th>
                    <th>Ngày Kết Thúc</th>
                    <th>Tổng Tiền Ăn</th>
                    <th>Tổng Tiền Khách Sạn</th>
                    <th>Tổng Tiền Phương Tiện</th>
                    <th>Tổng Tiền Khác</th>
                    <th>Tổng Cộng</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>